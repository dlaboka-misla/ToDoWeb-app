<script src="https://code.jquery.com/jquery-3.5.0.min.js"></script>
<script>
    // an ajax request to the server to uncheck the item if its checked
    function onMyClick(i) {
        $.ajax({
            url: '/onMyClick',
            type: 'post',
            data: {
                itemNumber: i
            },
            success: function(response) {
                console.log(response);
            }
        });
    };

    // an ajax request to the server to check the item if its unchecked
    function onYourClick(i) {
        $.ajax({
            url: '/onYourClick',
            type: 'post',
            data: {
                itemNumber: i
            },
            success: function(response) {
                console.log(response);
            }
        });
    };

    // this function is called when user clicks on the right curly bracket
    function getNextDay(dayOfWeek) {
        $.ajax({
            url: '/posts/' + dayOfWeek + '/next',
            type: 'post',
            success: function(response) {
                console.log(response);
            }
        });
    };

    // is called when user clicks on the left curly bracket
    function getPreviousDay(dayOfWeek) {
        $.ajax({
            url: '/posts/' + dayOfWeek + '/previous',
            type: 'post',
            success: function(response) {
                console.log(response);
            }
        });
    };

    // is called when user pressed on the right or left arrow key of the keyboard
    function getAnotherDay(dayOfWeek, event) {
        let keycode = event.keyCode;
        let type = '';
        if (keycode == 37) {
            type = '/previous';
        } else if (keycode == 39) {
            type = '/next';
        }
        if (type != '') {
            $.ajax({
                url: '/posts/' + dayOfWeek + type,
                type: 'post',
                success: function(response) {
                    window.location.reload(true);
                }
            });
        }
    };
</script>