<%- include("header") -%>

    <body class="text-center">
        <form action="/login" method="post" class="form-signin">
            <img class="mb-4" src="/docs/4.3/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">Log in</h1>
            <% if (messages.error) { %>
                <%= messages.error %>
                    <% } %>
                        <label for="inputText" class="sr-only">Username</label>
                        <input type="text" id="name" name="name" class="form-control" placeholder="Username" required autofocus>
                        <label for="inputPassword" class="sr-only">Password</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Password" required autofocus>
                        <button class="btn btn-lg btn-dark btn-block" type="submit">Log in</button>
                        <p class="mt-5 mb-3 text-muted"></p>
                        <p class="message">Not registered? <a href="/register">Create a Profile Page</a></p>
        </form>
    </body>

    </html>